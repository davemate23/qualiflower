<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="table table-bordered">
  <thead>
  <tr>
    <th>#</th>
    <th><%= sortable "Title" %></th>
    <th><%= sortable "Alternativeernative" %></th>
    <th><%= sortable "Description" %></th>
    <th><%= sortable "Pay" %></th>
    <th><%= sortable "Hours" %></th>
    <th><%= sortable "Entry" %></th>
    <th><%= sortable "Skills" %></th>
    <th><%= sortable "Salary" %></th>
    <th><%= sortable "Working_hours" %></th>
    <th><%= sortable "Career_path" %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @search.results.each_with_index do |job,index| %>
      <tr>

        <th scope="row"><%= index+1 %></th>
        <td><%= job.title.html_safe rescue "" %></td>
        <td><%= job.alternativeernative.html_safe rescue "" %></td>
        <td><%= job.description.html_safe rescue "" %></td>
        <td><%= job.pay.html_safe rescue "" %></td>
        <td><%= job.hours.html_safe rescue "" %></td>
        <td><%= job.entry.html_safe rescue "" %></td>
        <td><%= job.skills.html_safe rescue "" %></td>
        <td><%= job.salary.html_safe rescue "" %></td>
        <td><%= job.working_hours.html_safe rescue "" %></td>
        <td><%= job.career_path.html_safe rescue "" %></td>
        <td><%#= job.institutes %></td>

        <% if is_admin? %>
            <td><%= link_to 'Show', job %></td>
            <td><%= link_to 'Edit', edit_job_path(job) %></td>
            <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  <%#= page_entries_info @locations %>
  </tbody>
</table>


<br>
<%= paginate @search.results %>

